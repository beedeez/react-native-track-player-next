{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
